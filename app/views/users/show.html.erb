<% if !user_signed_in? %>

<p><%= link_to "Sign Up", new_user_registration_path %></p>

<% else %>

<div class="row">
  <div class="col-md-3">
    <%= render 'profiles/show' %>
  </div>

  <% if current_user.admin == true %>
    <%= render 'users/teachers/show' %>
  <div class="row" id="pairs">
    <%= render 'pairs/form' %>
    <%= render 'pairs/admin' %>
  <% else %>
    <%= render 'users/students/show' %>
  <% end %>
</div>

<% end %>
