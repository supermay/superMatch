  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        All Matches of <%= Date.today %>
      </div>
      <div class="panel-body">
        <% if @pairs.length != 0  %>
        <% @chosen_days.each do |day| %>
          <% if day.pairs.first.date == Date.today %>
              <% day.pairs.each do |pair| %>
              <div class="col-sm-6 col-md-4">
                <div class="media">
                  <% pair.users.each do |user| %>
                  <div class="col-sm-6 col-md-6">
                      <div class="thumbnail">
                        <%= image_tag user.profile.image.thumbnail, class: "media-object" %>
                        <div class="caption">
                          <%= user.profile.first_name %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
</div>
